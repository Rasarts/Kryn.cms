<?xml version="1.0"?>
<database>
  <table name="system_session" phpName="Session" idMethod="native">
    <column name="id" type="VARCHAR" size="255" primaryKey="true" required="true"/>
    <column name="user_id" type="INTEGER" required="false"/>
    <column name="time" type="INTEGER" required="true"/>
    <column name="ip" type="VARCHAR" size="255" required="false"/>
    <column name="useragent" type="VARCHAR" size="255" required="false"/>
    <column name="language" type="VARCHAR" size="255" required="false"/>
    <column name="page" type="VARCHAR" size="255" required="false"/>
    <column name="refreshed" type="INTEGER" required="false"/>
    <column name="extra" type="LONGVARCHAR" required="false"/>
    <column name="created" type="INTEGER" required="false"/>
    <foreign-key foreignTable="system_user">
      <reference local="user_id" foreign="id"/>
    </foreign-key>
    <vendor type="mysql">
      <parameter name="Charset" value="utf8"/>
    </vendor>
  </table>
  <table name="system_group" phpName="Group" idMethod="native">
    <column name="id" type="INTEGER" primaryKey="true" autoIncrement="true" required="true"/>
    <column name="close" type="INTEGER" required="false"/>
    <column name="name" type="VARCHAR" size="255" required="false"/>
    <column name="description" type="LONGVARCHAR" required="false"/>

    <vendor type="mysql">
      <parameter name="Charset" value="utf8"/>
    </vendor>

  </table>
  <table name="system_user" phpName="User" idMethod="native">
    <column name="id" type="INTEGER" primaryKey="true" autoIncrement="true" required="true"/>
    <column name="username" type="VARCHAR" size="255" required="true"/>
    <column name="auth_class" type="VARCHAR" size="255" required="false"/>
    <column name="passwd" type="VARCHAR" size="255" required="false"/>
    <column name="passwd_salt" type="VARCHAR" size="255" required="false"/>
    <column name="activationkey" type="VARCHAR" size="255" required="false"/>
    <column name="email" type="VARCHAR" size="255" required="false"/>
    <column name="desktop" type="OBJECT" required="false"/>
    <column name="settings" type="OBJECT" required="false"/>
    <column name="widgets" type="OBJECT" required="false"/>
    <column name="first_name" type="VARCHAR" size="255" required="false"/>
    <column name="last_name" type="VARCHAR" size="255" required="false"/>
    <column name="sex" type="INTEGER" required="false"/>
    <column name="logins" type="INTEGER" required="false"/>
    <column name="lastlogin" type="INTEGER" required="false"/>
    <column name="activate" type="BOOLEAN" required="false"/>

    <vendor type="mysql">
      <parameter name="Charset" value="utf8"/>
    </vendor>
    <column name="created" type="BIGINT"/>
    <column name="modified" type="BIGINT"/>
  </table>

  <table name="system_user_group" isCrossRef="true" phpName="UserGroup">
    <column name="user_id" type="INTEGER" primaryKey="true" required="true"/>
    <column name="group_id" type="INTEGER" primaryKey="true" required="true"/>

    <foreign-key foreignTable="system_user">
      <reference local="user_id" foreign="id"/>
    </foreign-key>
    <foreign-key foreignTable="system_group" phpName="GroupMembership">
      <reference local="group_id" foreign="id"/>
    </foreign-key>
    <vendor type="mysql">
      <parameter name="Charset" value="utf8"/>
    </vendor>
  </table>
</database>
