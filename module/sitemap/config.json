{
  "owner": "1",
  "title": "Sitemap",
  "desc": "Display a simple Sitemap",
  "tags": {
    "en": "sitemap"
  },
  "version": "0.1.0",
  "community": "1",
  "writableFiles": "inc\/template\/sitemap\/*",
  "plugins": {
    "defaultSitemap": [
      "[[Display Sitemap (Level 1)]]",
      {
        "template": {
          "label": "[[Template]]",
          "type": "files",
          "withExtension": false,
          "directory": "inc\/template\/sitemap\/frontend\/"
        }
      }
    ]
  },
  "pageProperties": {
    "hideInSitemap": {
      "label": "[[Hide in sidemap]]",
      "desc": "[[Activate the checkbox to hide this page from the sitemaps]]",
      "type": "checkbox"
    },
    "alternativeTitle": {
      "label": "[[Alternative title]]",
      "desc": "[[If you want to change the title in the sitemaps]]",
      "type": "text"
    }
  },
  "category": "16"
}