<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Session" table="system_sessions">

        <id name="id" type="string" />


        <field name="time" type="integer">
            <options>
                <option name="label">[[Time]]</option>
            </options>
        </field>

        <field name="ip" type="string" nullable="true">
            <options>
                <option name="label">[[IP]]</option>
            </options>
        </field>

        <field name="useragent" type="string" nullable="true"/>
        <field name="language" type="string" nullable="true"/>
        <field name="page" type="string" nullable="true"/>
        <field name="refreshed" type="integer" nullable="true"/>
        <field name="extra" type="text" nullable="true"/>
        <field name="created" type="integer" nullable="true"/>

        <many-to-one field="user" target-entity="User" />

    </entity>

</doctrine-mapping>