{
    "owner": "1",
    "version": "0.6.0",
    "desc": "Publication is a small news and blog system.",
    "title": "Articles and Blogs",
    "category": "1",
    "community": "1",
    "writableFiles": "inc\/template\/publication\/*",
    "domainProperties": {
        "cache": {
            "label": "[[Cache html]]",
            "desc": "[[Some templates does not support this. If you have troubles, just deactivate this.]]",
            "type": "checkbox",
            "default": "0"
        }
    },
    "entryPoints": {
        "news": {
            "title": "[[Articles]]",
            "class": "Publication\\Admin\\NewsCrud",
            "type": "combine",
            "icon": "#icon-newspaper",
            "isLink": true,
            "multi": true,
            "minWidth": 800,
            "minHeight": 460,
            "children": {
                "add": {
                    "title": "[[Add]]",
                    "class": "Publication\\Admin\\NewsCrud",
                    "type": "add",
                    "isLink": false,
                    "multi": true
                },
                "edit": {
                    "title": "[[Edit]]",
                    "class": "Publication\\Admin\\NewsCrud",
                    "type": "edit",
                    "isLink": false,
                    "multi": true
                },
                "category": {
                    "title": "[[Category]]",
                    "class": "publicationNewsCatsList",
                    "type": "list",
                    "isLink": true,
                    "multi": true,
                    "children": {
                        "add": {
                            "title": "[[Add]]",
                            "class": "publicationNewsCatsAdd",
                            "type": "add",
                            "isLink": false,
                            "multi": true,
                            "children": [
                                
                            ]
                        },
                        "edit": {
                            "title": "[[Edit]]",
                            "class": "publicationNewsCatsEdit",
                            "type": "edit",
                            "isLink": false,
                            "multi": true,
                            "children": [
                                
                            ]
                        }
                    }
                },
                "comments": {
                    "title": "[[Comments]]",
                    "class": "publicationNewsComments",
                    "type": "list",
                    "isLink": true,
                    "multi": true,
                    "children": {
                        "edit": {
                            "title": "[[Edit]]",
                            "class": "publicationNewsCommentsEdit",
                            "type": "edit",
                            "isLink": false,
                            "multi": true,
                            "children": [
                                
                            ]
                        },
                        "add": {
                            "title": "[[Add]]",
                            "class": "publicationNewsCommentsAdd",
                            "type": "add",
                            "isLink": false,
                            "multi": true,
                            "children": [
                                
                            ]
                        }
                    }
                }
            }
        }
    },
    "plugins": {
        "newsDetail": [
            "[[Article detail]]",
            {
                "template": {
                    "label": "[[Template]]",
                    "withoutExtension": 1,
                    "directory": "inc\/template\/publication\/news\/detail\/",
                    "type": "files"
                },
                "replaceTitle": {
                    "label": "[[Replace page title]]",
                    "desc": "Replace the title of the item with the page title",
                    "type": "checkbox",
                    "default": "1"
                },
                "allowComments": {
                    "label": "[[Allow comments]]",
                    "type": "checkbox",
                    "depends": {
                        "itemsPerPage": {
                            "needValue": 1,
                            "label": "Count per page",
                            "type": "integer",
                            "length": "6",
                            "default": "10"
                        },
                        "maxPages": {
                            "needValue": 1,
                            "label": "[[Max pages]]",
                            "type": "integer",
                            "length": "6",
                            "default": "10"
                        }
                    }
                },
                "category_id": {
                    "label": "[[Limit categories]]",
                    "table": "publication_news_category",
                    "table_key": "id",
                    "table_label": "title",
                    "multi": 1,
                    "type": "select"
                }
            }
        ],
        "newsDetailFixed": [
            "[[News detail fixed]]",
            {
                "template": {
                    "label": "[[Template]]",
                    "withoutExtension": 1,
                    "directory": "inc\/template\/publication\/news\/detail\/",
                    "type": "files"
                },
                "news_id": {
                    "label": "[[Article]]",
                    "table": "publication_news",
                    "table_key": "id",
                    "table_label": "title",
                    "type": "select"
                },
                "replaceTitle": {
                    "label": "[[Replace page title]]",
                    "desc": "Replace the title of the item with the page title",
                    "type": "checkbox",
                    "default": "1"
                },
                "allowComments": {
                    "label": "[[Allow comments]]",
                    "type": "checkbox",
                    "depends": {
                        "itemsPerPage": {
                            "needValue": 1,
                            "label": "[[Count per page]]",
                            "type": "integer",
                            "length": "6",
                            "default": "10"
                        },
                        "maxPages": {
                            "needValue": 1,
                            "label": "[[Max pages]]",
                            "type": "integer",
                            "length": "6",
                            "default": "10"
                        }
                    }
                }
            }
        ],
        "newsList": [
            "[[News list]]",
            {
                "itemsPerPage": {
                    "label": "[[Count per page]]",
                    "type": "number",
                    "length": "6",
                    "default": "10"
                },
                "maxPages": {
                    "label": "[[Max pages]]",
                    "type": "number",
                    "length": "6",
                    "default": "10"
                },
                "detailPage": {
                    "label": "[[Detailpage]]",
                    "type": "page"
                },
                "template": {
                    "label": "[[Template]]",
                    "withoutExtension": 1,
                    "directory": "inc\/template\/publication\/news\/list\/",
                    "type": "files"
                },
                "category_id": {
                    "label": "[[Limit categories]]",
                    "table": "publication_news_category",
                    "table_key": "id",
                    "table_label": "title",
                    "multi": 1,
                    "type": "select"
                },
                "order": {
                    "label": "[[Sort by]]",
                    "items": {
                        "title": "[[Title]]",
                        "releaseat": "[[Release date]]",
                        "releasedate": "[[News date]]",
                        "category_id": "[[Category]]"
                    },
                    "type": "select",
                    "default": "2"
                },
                "orderDirection": {
                    "label": "Sort direction",
                    "items": {
                        "desc": "[[Descending]]",
                        "asc": "[[Ascending]]"
                    },
                    "type": "select"
                },
                "enableRss": {
                    "label": "[[Enables Rss view on this page]]",
                    "type": "checkbox",
                    "depends": {
                        "rssTemplate": {
                            "needValue": 1,
                            "label": "[[Rss feed template]]",
                            "type": "files",
                            "withoutExtension": true,
                            "directory": "inc\/template\/publication\/news\/rss\/"
                        }
                    }
                }
            }
        ],
        "rssList": [
            "[[News RSS Feed]]",
            {
                "itemsPerPage": {
                    "label": "[[Maximum Items for rss feed]]",
                    "type": "number",
                    "length": "6",
                    "default": "10"
                },
                "detailPage": {
                    "label": "[[Detailpage]]",
                    "type": "page"
                },
                "rssTemplate": {
                    "label": "[[Template]]",
                    "withoutExtension": 1,
                    "directory": "inc\/template\/publication\/news\/rss\/",
                    "type": "files"
                },
                "category_id": {
                    "label": "[[Category\/s]]",
                    "table": "publication_news_category",
                    "table_key": "id",
                    "table_label": "title",
                    "multi": 1,
                    "type": "select"
                }
            }
        ],
        "categoryList": [
            "[[Category list (with Counts)]]",
            {
                "listPage": {
                    "label": "[[Page with list plugin]]",
                    "type": "page"
                },
                "template": {
                    "label": "[[Template]]",
                    "withoutExtension": 1,
                    "directory": "inc\/template\/publication\/categoryList\/",
                    "type": "files"
                },
                "category_id": {
                    "label": "[[Limit categories]]",
                    "table": "publication_news_category",
                    "table_key": "id",
                    "table_label": "title",
                    "multi": 1,
                    "type": "select"
                }
            }
        ]
    },
    "objects": {
        "News": {
            "desc": "[[Articles]]",
            "table": "publication_news",
            "labelField": "title",
            "nested": false,
            "dataModel": "propel",
            "multiLanguage": true,
            "domainDepended": false,
            "plugins": "newsDetail, newsList",
            "browserColumns": {
                "title": {
                    "label": "[[Title]]",
                    "type": "text",
                    "empty": true
                },
                "categoryId": {
                    "object": "Publication\\News",
                    "field": "categoryId",
                    "type": "predefined"
                }
            },
            "browserDataModel": "default",
            "browserInterface": "default",
            "fields": {
                "id": {
                    "label": "[[Id]]",
                    "type": "number",
                    "primaryKey": 1,
                    "autoIncrement": 1,
                    "empty": 1
                },
                "title": {
                    "label": "[[Title]]",
                    "type": "text",
                    "required": true
                },
                "categoryId": {
                    "label": "[[Category]]",
                    "object": "Publication\\NewsCategory",
                    "objectLabel": "title",
                    "objectRelation": "nTo1",
                    "type": "object"
                },
                "files": {
                    "label": "Attachments",
                    "type": "filelist",
                    "empty": 1
                },
                "lang": {
                    "label": "Language",
                    "type": "lang",
                    "empty": 1
                },
                "intro": {
                    "type": "layoutelement",
                    "empty": 1
                },
                "content": {
                    "type": "layoutelement",
                    "empty": 1
                },
                "created": {
                    "object": "user",
                    "objectRelation": "nTo1",
                    "type": "object",
                    "primaryKey": 0,
                    "empty": 1
                },
                "modified": {
                    "object": "user",
                    "objectRelation": "nTo1",
                    "type": "object",
                    "primaryKey": 0,
                    "empty": 1
                },
                "releaseat": {
                    "label": "[[Release at]]",
                    "type": "datetime",
                    "desc": "[[Let it empty to release it now]]"
                },
                "releasedate": {
                    "label": "[[News date]]",
                    "type": "datetime",
                    "required": true
                },
                "deactivate": {
                    "label": "[[Hide]]",
                    "type": "checkbox",
                    "primaryKey": 0,
                    "empty": 1
                },
                "deactivatecomments": {
                    "label": "[[Deactivate comments]]",
                    "type": "checkbox",
                    "primaryKey": 0,
                    "empty": 1
                },
                "commentscount": {
                    "label": "[[Comments count]]",
                    "type": "number",
                    "primaryKey": 0,
                    "autoIncrement": 0,
                    "empty": 1
                },
                "tags": {
                    "label": "[[Tags]]",
                    "type": "text"
                },
                "introimage": {
                    "type": "text",
                    "primaryKey": 0,
                    "empty": 1
                },
                "introimage2": {
                    "type": "text",
                    "primaryKey": 0,
                    "empty": 1
                }
            },
            "label": "[[Article]]"
        },
        "NewsCategory": {
            "fields": {
                "id": {
                    "type": "number",
                    "primaryKey": true,
                    "autoIncrement": true
                },
                "title": {
                    "label": "[[Title]]",
                    "type": "text"
                }
            },
            "label": "[[Article category]]"
        }
    },
    "tags": {
        "en": "news, blog, publication",
        "de": "news, blogs"
    },
