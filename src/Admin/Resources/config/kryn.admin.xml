            <asset>@AdminBundle/js/ka/WindowEdit.js</asset>
            <asset>@AdminBundle/js/ka/WindowList.js</asset>
            <asset>@AdminBundle/js/ka/Select.js</asset>
            <assets>@AdminBundle/js/ka/*.js</assets>
            <assets>@AdminBundle/js/ka/DashboardWidgets/Base.js</assets>
            <assets>@AdminBundle/js/ka/DashboardWidgets/*.js</assets>

