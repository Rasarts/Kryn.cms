            </stream>

            <stream id="uptime">
                <class>Admin\Controller\DashboardWidgets</class>
                <method>uptime</method>
            </stream>

            <stream id="analytics">
                <class>Admin\Controller\DashboardWidgets</class>
                <method>analytics</method>
            </stream>

            <stream id="latency">
                <class>Admin\Controller\DashboardWidgets</class>
                <method>latency</method>
